{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./", // Set this to the root of your project
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "declarations.d.ts"  // Make sure this is included
  ]
}
